<Window x:Class="Project.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="AddWindow" Height="340" Width="800" Background="#FF98BCE0" FontSize="14">
    <Grid>
        <StackPanel Margin="150,15,150,5">
            <TextBlock Text="Name"/>
            <TextBox x:Name="txtName"/>
            <TextBlock Text="Quantity"/>
            <TextBox x:Name="txtQuantity"/>
            <TextBlock Text="MinQuantity"/>
            <TextBox x:Name="txtMinQuantity"/>
            <TextBlock Text="Location"/>
            <TextBox x:Name="txtLocation"/>
            <TextBlock Text="Supplier"/>
            <ComboBox x:Name="Supplier"/>
            <TextBlock Text="Category"/>
            <ComboBox x:Name="sCategory"/>

            <Button Content="Submit" Click="submit_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
